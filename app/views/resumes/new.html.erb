<p style="text-align: center;">Fill this form for better jobs.</p>
<h6>fill this form carefully!</h6>
<h6>all the field mark with (*) is mandatory.</h6>
<%= form_with model: @resume, html: { class: 'resume-form' } do |form| %>
<div class="form-group">
<%= form.label :first_name, class: 'form-label' %> 
<%= form.text_field :first_name, class: 'form-input' %>
</div>
<div class="form-group">
<%= form.label :last_name, class: 'form-label' %> 
<%= form.text_field :last_name %>
</div>
<div class="form-group">
<%= form.label :age , class: 'form-label' %> 
<%= form.text_field :age %>
</div>
<div class="form-group">
<%= form.label :contact_number, class: 'form-label' %>  
<%= form.text_field :contact_number %>
</div>
<div class="form-group">
<%= form.label :address, class: 'form-label' %>  
<%= form.text_field :address %>
</div>
<div class="form-group">
<%= form.label :email, class: 'form-label' %> 
<%= form.text_field :email %>
</div>
<div>
	<%= form.label :attachment, class: 'form-label' %>
	<%= form.file_field :attachment %>
</div>
<div>
	<%= form.label :image, class: 'form-label' %>
	<%= form.file_field :image %>
</div>
<%= form.submit "Submit", class: 'btn-submit' %>
<% end %>
